<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music"
    android:gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_sound1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/colourbutton1"
        android:onClick="playSound"
        android:text="sound 1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_sound2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_sound2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colourbutton2"
        android:onClick="playSound"
        android:text="sound 2"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_sound3"
        app:layout_constraintStart_toStartOf="@+id/button_sound1"
        app:layout_constraintTop_toBottomOf="@+id/button_sound1" />

    <Button
        android:id="@+id/button_sound3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colourbutton3"
        android:onClick="playSound"
        android:text="sound 3"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_sound4"
        app:layout_constraintStart_toStartOf="@+id/button_sound2"
        app:layout_constraintTop_toBottomOf="@+id/button_sound2" />

    <Button
        android:id="@+id/button_sound4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colourbutton4"
        android:onClick="playSound"
        android:text="sound 4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_sound5"
        app:layout_constraintStart_toStartOf="@+id/button_sound3"
        app:layout_constraintTop_toBottomOf="@+id/button_sound3" />/>

    <Button
        android:id="@+id/button_sound5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colourbutton5"
        android:onClick="playSound"
        android:text="sound 5"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_sound6"
        app:layout_constraintStart_toStartOf="@+id/button_sound4"
        app:layout_constraintTop_toBottomOf="@+id/button_sound4" />

    <Button
        android:id="@+id/button_sound6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/colourbutton6"
        android:onClick="playSound"
        android:text="sound 6"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/button_sound5"
        app:layout_constraintTop_toBottomOf="@+id/button_sound5" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linktosite"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorLink="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>